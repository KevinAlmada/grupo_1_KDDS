<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %> 
<body>
    <!-- HEADER -->
    <%- include('partials/header.ejs') %> 
    <div class="banner-searchResults">
        <img src="/images/productos/bannerSearch.jpg" alt="banner resultados de busqueda">
    </div>
    <!-- TITLE -->
    <h1 class="seachTitle" >Resultados de su busqueda</h1>
    <!-- NAVBAR -->
    <div class="navbar-search">
        <div class="navbar-filter">
            <i class="fas fa-sliders-h">
            <span>Filtros</span>
        </i></div>
        <div class="navbar-sort">
            <span>Ordenar por</span>
            <div class="sort-dsc"><i class="fas fa-sort-amount-down"></i></div>
            <div class="sort-asc"><i class="fas fa-sort-amount-up"></i></div>
        </div>
    </div>
    <!-- CARD -->
    <main class="searchResultsMain">
        <section class="card-container">
            <% db.forEach(producto => { %>
                <article class="cardsearch">
                    <img class="card-img" src="/images/product/<%- producto.img[0] %> " alt="LenteSolNegro">
                    <div class="product_info_card">
                        <h2 class="product-name"><%- producto.name %> </h2>
                        <div class="pricesCards">
                            <h3 class="precio"> $<%- producto.price-producto.price/100*producto.discount %></h3>
                        <del class="precio"> $<%- producto.price %> </del>
                        </div >
                        <a href="/products/productDetail/<%- producto.id %> "><p class="btn-comprar">Ver m√°s</p></a>
                        <a href="/products/productDetail/<%- producto.id %> "><p class="btn-comprar">Agregar al carrito</p></a>
                    </div>
                </article>
            <% }) %>
        </section>
    <!-- NEWSLETTER -->
    <%- include('partials/newsletter.ejs') %> 
    </main>
    <!-- SCRIPT -->
    <%- include('partials/script.ejs') %> 
    <!-- FOOTER -->
    <%- include('partials/footer.ejs') %> 
    <!-- FIN DE FOOTER -->
</body>
</html>