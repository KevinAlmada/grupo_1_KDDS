<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %> 
    
</head>
<body class="profile-body">
    <!-- HEADER -->
    
    <%- include('partials/header.ejs') %> 
    
    <!-- FIN DE HEADER -->
    <main class="userProfile">
        <div class="avatar">
            <img src="/images/perfil/avatardefault.png" alt="">
        </div>
        <div class="userProfile-container">
            <div class="userProfile_box">
                <form action="/users/useredit/<%= usuario.id %> ?_method=PUT" method="POST">
                    <label for="name">Nombre</label>
                    <input type="text" value="<%= usuario.first_name %>" name="first_name">
                    <label for="apellido">Apellido</label>
                    <input type="text" value="<%= usuario.last_name %>" name="last_name">
                    <label for="telefono">Tel√©fono</label>
                    <input type="tel" name="telefono" >
                    <label for="direccion">Direccion</label>
                    <input type="text" name="direccion" value="<%= usuario.direction %>">
                    <label for="codigo">Codigo Postal</label>
                    <input type="text" name="codigo" value="<%= usuario.cp %>">
                    <label for="provincia">Provincia</label>
                    <input type="text" name="provincia" value="<%= usuario.province %>">
                    <label for="localidad">Localidad</label>
                    <input type="text" name="localidad" value="<%= usuario.location%>">
                    <% if (useronline.rol == 1) { %>
                        <label for="rol">rol</label>
                        <select name="rol" id="rolEditForm">
                            <option value="0" <%= usuario.rol == 0? "selected": "" %> >USER</option>
                            <option value="1" <%= usuario.rol == 1? "selected": "" %>>ADMIN</option>
                        </select>
                    <% } %>
                    <button type="submit">EDITAR</button>
                </form>
                <div>
                    <a  href="/users/useredit/<%= usuario.id %> " class="editprof">EDITAR DATOS</a>
                    <a href="/users/logout" class="editprof">CERRAR SESION</a>
                </div>
            </div>
            
        </div>
    </main>
</body>
</html>