<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %> 
<body class="body-main-newProduct">
    <main class="main-newProduct">
        <div class="titulo-newp">
            
            <h1 class="newp-title">Modificación de Producto</h1>
        </div>
        <section class="newp-container">
            <div class="form-container-np">
                <form action="/admin/changeProduct/<%= productoAModificar.id %>?_method=PUT" id="form" method="POST" enctype="multipart/form-data">
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" value="<%= productoAModificar.name %> ">
                    <span class="error" id="nombreErrors"></span>

                    <label  for="descripcion">Desripción</label>
                    <textarea name="descripcion" id="descripcion" cols="35" rows="10" ><%= productoAModificar.description %></textarea>
                    <span class="error" id="descripcionErrors"></span>
                    
                    <label for="imagen">Imagen</label>
                    <input type="file" name="imagenProducto" accept=".JPG,.JPEG,.PNG,.GIF" id="imagen" multiple value="<%= productoAModificar.imagenProducto%>">
                    <span class="error" id="imagenErrors"></span>
                    
                    <label for="precio">Precio</label>
                    <input type="number" name="precio" id="precio" value=<%= `${productoAModificar.price}` %> >
                    <span class="error" id="precioErrors"></span>
                    
                    
                    <label for="categorias">Categorias</label>
                    <select name="categorias" id="categorias" >
                        <option value="1">Sol</option>
                        <option value="2">Lectura</option>
                    </select>
                    <span class="error" id="categoriasErrors"></span>
                    <br>
                    <label for="discount">Descuento</label>
                    <input type="number" name="discount" id="discount" value=<%= `${productoAModificar.discount}` %> >
                    <span class="error" id="descuentoErrors"></span>
                    
                    <label for="forma">Forma</label>
                    <select name="forma" id="forma">
                        <option value="aviador">Aviador</option>
                        <option value="cuadrada">Cuadrada</option>
                        <option value="deportivo">Deportivo</option>
                        <option value="redonda">Redonda</option>
                    </select>
                    <span class="error" id="formaErrors"></span>

                    <label for="material">Material</label>
                    <select name="material" id="material">
                        <option value="acetato">Acetato</option>
                        <option value="Ecologico">Ecologico</option>
                        <option value="maderametal">Madera y metal</option>
                        <option value="metal">Metal</option>
                    </select>
                    <span class="error" id="materialErrors"></span>

                    <label for="lente">Lente</label>
                    <select name="lente" id="lente">
                        <option value="degrade">Degrade</option>
                        <option value="espejado">Espejado</option>
                        <option value="polarizado">Polarizado</option>
                        <option value="uniforme">Uniforme</option>
                    </select>
                    <span class="error" id="lenteErrors"></span>

                    <br />
                    <span class="error" id="submitError"></span>
                    <button class="btn-newp" type="submit">Editar Producto<i class="fas fa-user-edit"></i></button>   
                </form>
                <form action="/admin/deleteProduct/<%= productoAModificar.id %>?_method=DELETE" method="POST">
                    <button class="delete-product" type="submit">Eliminar Producto<i class="fas fa-trash"></i></button>
                </form>
            </div>
            
        </section>
    </main>
    <script src="/javascripts/validaciones/producto.js"></script>
</body>
</html>