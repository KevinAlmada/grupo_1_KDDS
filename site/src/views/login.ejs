<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %> 
<body class="body-login">
    <!-- HEADER -->
   <!--  <%- include('partials/header.ejs') %>  -->
    
    <!-- FIN DE HEADER -->
    <!-- video findo -->
    <video src="/images/login/Comercial de JL LENTES.mp4" loop autoplay muted></video>
    <!-- video findo -->
    <main class="login-main">
        <div class="container-form">
            <h2 class="form-title">Bienvenido</h2>

            <form action="/users/login" method="POST">
                
                <p class="element">
                    <label for="email" >E-mail</label>
                    <input type="email" id="email" name="email" placeholder="usuario@email.com" value="<%= locals.old && old.email%>" >
                    
                </p>
                <% if (locals.errors && errors.email) { %>
                    <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.email.msg %> </small>
                   <% } %>
                <p class="element">
                    <label for="password" >Contraseña</label>
                    <input type="password" id="password" name="password" placeholder="ingresa al menos 8 caracteres" value="<%= locals.old && old.password%>">
                    
                </p>
                <% if (locals.errors && errors.password) { %>
                    <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.password.msg %> </small>
                   <% } %>
                <div class="remember-container">
                
                        <input class="remember" type="checkbox" id="remember" value="recordar">
                        <label class="remember" for="remember">Recordame</label>
                    
                </div>
                <div class="boton-enviar">
                    <button type="submit" class="enviar">
                        ingresa
                    </button>
                    
                </div>
            </form>
            <% if (locals.errorMsg ) { %>
                <small class="text-danger"><%= errorMsg %> </small>
            <% } %>
            
            <div class="register">
                <p>¿Todavia no tenés cuenta?  <a href="/users/register">Registrate</a></p>
                
            </div>
            <div class="register recuperar">
                
                <p>¿Olvidaste la contraseña?  <a href="#">Recuperala</a></p>
            </div>
            <div class="firma">
                <h6>Hecho con    <i class="fas fa-heart"></i>    por <span class="firma-marca">KDDS</span></h6>
            </div>
            
            <!-- <img class="lentes-registro" src="/images/login/lentes_registro.jpg" alt="Bienvenido"> -->
        </div>

    </main>
    <!-- FOOTER -->
    <%- include('partials/footer.ejs') %> 
    
    <!-- FIN DE FOOTER -->  
    
</body>
</html>