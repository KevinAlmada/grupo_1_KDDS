<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %> 
<body class="body-register">
    
    
    <main class="register-main">
        <div class="container-form">
            <h2 class="form-title">registrate</h2>

            <form action="/users/register" method="POST">
                <p class="element">
                    <label for="nombre" >Nombre</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Ingresá tu Nombre" value="<%= locals.old && old.nombre%>">
                </p>
                <small class="text-danger" id="errorsName"></small>
                <% if (locals.errors && errors.nombre) { %>
                 <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.nombre.msg %> </small>
                <% } %>
                <p class="element">
                    <label for="apellido" >Apellido</label>
                    <input type="text" id="apellido" name="apellido" placeholder="Ingresá tu Apellido" value="<%= locals.old && old.apellido%>">
                </p>
                <small class="text-danger" id="errorsLastName"></small>
                <% if (locals.errors && errors.apellido) { %>
                    <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.apellido.msg %> </small>
                   <% } %>
                <p class="element">
                    <label for="email" >E-mail</label>
                    <input type="email" id="email" name="email" placeholder="usuario@email.com" value="<%= locals.old && old.email%>">
                </p>
                <small class="text-danger" id="errorsEmail"></small>
                <% if (locals.errors && errors.email) { %>
                    <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.email.msg %> </small>
                   <% } %>
                <p class="element">
                    <label for="password" >Contraseña</label>
                    <input type="password" id="password" name="pass1" placeholder="ingresa al menos 8 caracteres">
                </p>
                <small class="text-danger" id="errorsPass"></small>
                <% if (locals.errors && errors.pass1) { %>
                    <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.pass1.msg %> </small>
                   <% } %>
                <p class="element">
                    <label for="password" >Confirma la contraseña</label>
                    <input type="password" id="password2" name="pass2" placeholder="Coloca la misma contraseña">
                </p>
                <small class="text-danger" id="errorsPass2"></small>
                <% if (locals.errors && errors.pass2) { %>
                    <small class="text-danger"><i class="fas fa-exclamation-circle"></i><%= errors.pass2.msg %> </small>
                   <% } %>
                <div class="boton-enviar">
                    <button class="enviar" type="submit">
                        Crea Tu cuenta
                    </button>
                </div>
            </form>
            
            <div class="login">
                ¿Ya tenes cuenta?  <a href="/users/login">Ingresá</a>
            </div>
            <div class="firma">
                <h6>Hecho con <i class="fas fa-heart"></i> por <span class="firma-marca">KDDS</span></h6>
            </div>
            
            <img class="lentes-registro" src="/images/login/lentes_registro.jpg" alt="Bienvenido">
        </div>

    </main>
    <!-- FOOTER -->
    <%- include('partials/footer.ejs') %> 
    
    <!-- FIN DE FOOTER -->    
    <script src="/javascripts/validaciones/register.js"></script>
</body>
</html>