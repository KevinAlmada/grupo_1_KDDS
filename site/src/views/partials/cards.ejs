<div class="box-top">
    <% for(let i = 1; i <= 4; i++) { %>
        <div class="slider">
            <article class="product-box-top fade">
                <img src="/images/home/section-3/lentes-<%-i%>.jpg">
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
                <div class="text-box">
                    <h3>Patrick Silver</h3>
                    <h3>$6.499</h3>
                    <p>6 cuotas sin interes de $1.083</p>
                    <button>Comprar</button>
                </div>
            </article>
        </div>
    <%}%>
</div>
<div class="box-bottom">
    <% for(let i = 1; i <= 4; i++) { %>
        <div class="slider-bottom">
            <article class="product-box-botton fade">
                <img src="/images/home/section-3/bottom/lentes-<%-i%>.jpg">
                <a class="prev" >&#10094;</a>
                <a class="next" >&#10095;</a>
                <div class="text-box">
                    <h3>Gregory Peck</h3>
                    <h3>$3.899</h3>
                    <p>6 cuotas sin interes de $650</p>
                    <button>Comprar</button>
                </div>
            </article>
        </div>
    <%}%>
</div>