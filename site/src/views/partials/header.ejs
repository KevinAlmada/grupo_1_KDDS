        <div id="burger" onclick="burger()"><i class="fas fa-bars" id="hamburguesa"></i></div>
        <div class="container-header-logo">
            <a href="/"><h1>KDDS</h1></a>
        </div>
        <form class="search-bar-desktop" action="/products/search" method="GET">
            <input type="search" name="buscador" id="search">
