    <div class="menu-lateral" id="menuLateral"> 
        <div class="left-panel" id="panelMenuLateral">
            <div class="cruzBurger"onclick="closeBurger()"><i class="fas fa-times" id="cruz" ></i></div>
            <ul>
                <li class="side-bar-logo"><a href="/"><h1>KDDS</h1></a></li>
                <li>
                    <div class="search-bar">
                        <form action="/products/search" method="GET">
                            <input type="search" name="buscador" id="buscador">
                            <button class="search-ico" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                    </form>
                    </div>
                </li> 
                <li>
                    <a href="/users/cart"><i class="fas fa-shopping-bag"></i>Tu Carrito</a>
                </li>  
                <li>
                    <div class="header-mobile-drop-title" id="header-mobile-drop-title" onclick="headerDropDown()">
